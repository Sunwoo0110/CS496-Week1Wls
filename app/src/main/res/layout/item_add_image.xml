<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_margin="10dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/addimage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/cat2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/addLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/custom_gallery_like"
                android:drawableTint="@color/red"
                android:fontFamily="@font/g_medium"
                android:text="좋아요"
                android:textAlignment="center"
                android:textColor="@color/mediumPurple"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/addtag"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/addViews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/custom_gallery_view"
                android:drawableTint="@color/red"
                android:fontFamily="@font/g_medium"
                android:text="100"
                android:textAlignment="center"
                android:textColor="@color/mediumPurple"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/addtag"
                app:layout_constraintLeft_toRightOf="@id/addLikes" />

            <ImageButton
                android:id="@+id/btn_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:src="@drawable/custom_gallery_link"
                app:layout_constraintRight_toRightOf="@id/addimage"
                app:layout_constraintTop_toBottomOf="parent" />

        </LinearLayout>

        <TextView
            android:id="@+id/addtag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/g_bold"
            android:scaleType="fitXY"
            android:text="#고양이"
            android:textSize="40dp" />

        <!--
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            android:textColor="@android:color/black"
            android:textSize="21dp"
            android:text="Title"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desc"

            android:text="Desc"
            android:textSize="18dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"/>
        -->

    </LinearLayout>
</androidx.cardview.widget.CardView>