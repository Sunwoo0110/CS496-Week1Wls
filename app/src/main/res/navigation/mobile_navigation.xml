<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.week1wls.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_gallery"
        android:name="com.example.week1wls.ui.Gallery.GalleryFragment"
        android:label="@string/title_gallery"
        tools:layout="@layout/fragment_gallery" >
        <action
            android:id="@+id/action_navigation_gallery_to_navigation_gallery_add_image"
            app:destination="@id/navigation_gallery_add_image" />
    </fragment>

    <fragment
        android:id="@+id/navigation_gallery_input"
        android:name="com.example.week1wls.ui.Gallery.InputFragment"
        android:label="@string/Input"
        tools:layout="@layout/fragment_input" >
        <action
            android:id="@+id/action_navigation_gallery_input_to_navigation_gallery_add_image"
            app:destination="@id/navigation_gallery_add_image" />
    </fragment>

    <fragment
        android:id="@+id/navigation_gallery_add_image"
        android:name="com.example.week1wls.ui.Gallery.AddImageFragment"
        android:label="@string/addImage"
        tools:layout="@layout/fragment_add_image" >
        <action
            android:id="@+id/action_navigation_gallery_add_image_to_navigation_gallery"
            app:destination="@id/navigation_gallery" />
        <action
            android:id="@+id/action_navigation_gallery_add_image_to_navigation_gallery_input"
            app:destination="@id/navigation_gallery_input" />
    </fragment>

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.week1wls.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>